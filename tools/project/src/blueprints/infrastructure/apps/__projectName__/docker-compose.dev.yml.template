services:
  # App Server
  <%=appServerName%>:
    build:
      context: ../../
      dockerfile: apps/<%=projectName%>/<%=appServerName%>/Dockerfile
      args:
        NODE_ENV: development
    container_name: <%=projectName%>-<%=appServerName%>
    environment:
      - NODE_ENV=development
      - PORT=${SERVER_PORT}
      - DATABASE_URL=${DATABASE_URL}
      - RABBITMQ_URL=${RABBITMQ_URL}
    ports:
      - "${SERVER_PORT}:${SERVER_PORT}"
    volumes:
      - ../../apps/<%=projectName%>/<%=appServerName%>/src:/app/apps/<%=projectName%>/<%=appServerName%>/src
      - ../../libs:/app/libs
    depends_on:
      - postgres
      - rabbitmq

  # Web App
  <%=webAppName%>:
    build:
      context: ../../
      dockerfile: apps/<%=projectName%>/<%=webAppName%>/Dockerfile
    container_name: <%=projectName%>-<%=webAppName%>
    ports:
      - "3000:80"
    depends_on:
      - <%=appServerName%>

  # Worker Service
  <%=workerName%>:
    build:
      context: ../../
      dockerfile: apps/<%=projectName%>/<%=workerName%>/Dockerfile
      args:
        NODE_ENV: development
    container_name: <%=projectName%>-<%=workerName%>
    environment:
      - NODE_ENV=development
      - RABBITMQ_URL=${RABBITMQ_URL}
      - DATABASE_URL=${DATABASE_URL}
    volumes:
      - ../../apps/<%=projectName%>/<%=workerName%>/src:/app/apps/<%=projectName%>/<%=workerName%>/src
      - ../../libs:/app/libs
    depends_on:
      - rabbitmq
      - <%=appServerName%>

  # Database
  postgres:
    image: postgres:14
    container_name: <%=projectName%>-postgres
    environment:
      - POSTGRES_USER=${POSTGRES_USER}
      - POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
      - POSTGRES_DB=${POSTGRES_DB}
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres"]
      interval: 10s
      timeout: 5s
      retries: 5

  # Message Queue
  rabbitmq:
    image: rabbitmq:3-management
    container_name: <%=projectName%>-rabbitmq
    environment:
      - RABBITMQ_DEFAULT_USER=${RABBITMQ_DEFAULT_USER}
      - RABBITMQ_DEFAULT_PASS=${RABBITMQ_DEFAULT_PASS}
    ports:
      - "5672:5672"
      - "15672:15672"
    volumes:
      - rabbitmq_data:/var/lib/rabbitmq
    healthcheck:
      test: ["CMD", "rabbitmq-diagnostics", "-q", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5

volumes:
  postgres_data:
  rabbitmq_data:
