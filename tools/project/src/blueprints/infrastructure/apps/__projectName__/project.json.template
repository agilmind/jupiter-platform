{
  "name": "<%=projectName%>",
  "root": "apps/<%=projectName%>",
  "projectType": "application",
  "targets": {
    "build-all": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx build <%=appServerName%>",
          {
            "command": "nx build <%=webAppName%>",
            "forwardAllArgs": true
          },
          "nx build <%=workerName%>"
        ],
        "parallel": false
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/<%=projectName%>",
        "command": "docker compose -f docker-compose.dev.yml up --build"
      }
    },
    "dev:down": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/<%=projectName%>",
        "command": "docker compose -f docker-compose.dev.yml down"
      }
    },
    "dev:clean": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/<%=projectName%>",
        "commands": [
          "docker system prune -a --volumes --force",
          "docker compose -f docker-compose.dev.yml down --rmi all --volumes --remove-orphans",
          "docker network prune --force --filter 'label=com.docker.compose.project=<%=projectName%>'",
          "docker volume prune --force --filter 'label=com.docker.compose.project=<%=projectName%>'"
        ],
        "parallel": false
      }
    },
    "prod": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/<%=projectName%>",
        "command": "docker compose -f docker-compose.prod.yml up -d --build"
      }
    },
    "prod:down": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/<%=projectName%>",
        "command": "docker compose -f docker-compose.prod.yml down"
      }
    },
    "prod:clean": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/<%=projectName%>",
        "commands": [
          "docker system prune -a --volumes --force",
          "docker compose -f docker-compose.prod.yml down --rmi all --volumes --remove-orphans",
          "docker network prune --force --filter 'label=com.docker.compose.project=<%=projectName%>'",
          "docker volume prune --force --filter 'label=com.docker.compose.project=<%=projectName%>'"
        ],
        "parallel": false
      }
    },
  },
  "tags": ["scope:<%=projectName%>"]
}
