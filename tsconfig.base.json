{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2021", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@haiku": ["node_modules/haiku-generator/build/haiku/Haiku"],
      "@haiku/apolloPrisma/*": [
        "node_modules/haiku-generator/build/haiku/prismaServer/projectDir/*"
      ],
      "@haiku/parseProject": [
        "node_modules/haiku-generator/build/haiku/commands/parseProject"
      ],
      "@haiku/server/*": ["node_modules/haiku-generator/haiku/prismaServer/*"],
      "@jupiter-platform/shared-utils": ["libs/shared-utils/src/index.ts"],
      "@jupiter-platform/test-worker": ["test-worker/src/index.ts"],
      "@jupiter/worker-framework": ["libs/worker-framework/src/index.ts"],
      "create-worker": ["tools/create-worker/src/index.ts"],
      "haijin": ["tools/haijin/src/index.ts"],
      "project": ["tools/project/src/index.ts"],
      "tools": ["tools/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
